{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "suppressImplicitAnyIndexErrors": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "types": ["node"],
  "include": [
    "./src",
    "config/webpack.config.mjs",
    "config/webpack.dev.config.mjs",
    "config/webpack.prod.config.mjs",
    "postcss.config.mjs",
    ".eslintrc.mjs",
    "./auto-imports.d.ts"
  ]
}
